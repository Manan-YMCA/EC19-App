<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="60dp" />
            <stroke android:width="1dp" android:color="#f49394" />
            <gradient android:angle="-90" android:startColor="#ff0004" android:endColor="#c75759"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="60dp" />
            <stroke android:width="1dp" android:color="#f56e75" />
            <solid android:color="#df8486"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="60dp" />
            <stroke android:width="1dp" android:color="#ff0011" />
            <gradient android:angle="-90" android:startColor="#ff0004" android:endColor="#f53135" />
        </shape>
    </item>

</selector>