<?xml version="1.0" encoding="UTF-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Image_event"
        android:background="@drawable/drama_x_9_ad_782">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code Relay"
            android:textSize="23sp"
            android:fontFamily="@font/overpass_black"
            android:textColor="#d8d8d8"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting at "
            android:fontFamily="@font/overpass_bold"
            android:textColor="#fff"
            android:textSize="14sp" />
    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:21 PM"
        android:fontFamily="@font/overpass_bold"
        android:textSize="14sp"
        android:textColor="#fff"/>
</LinearLayout>

        <TextView
            android:id="@+id/tv_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:text="Coding Relay is a coding contest in which a team or individual could participate.Paticipants are provided with random competitive programming questions."
            android:textColor="#fff"
            android:textSize="12sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venue: "
            android:textColor="#fff"
            android:textSize="14sp"
            android:fontFamily="@font/overpass_bold" />
    <TextView
        android:id="@+id/event_venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab CC-09"
        android:textColor="#fff"
        android:textSize="14sp"
        android:fontFamily="@font/overpass_bold" />
</LinearLayout>

    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trending"
                    android:textSize="13sp"
                    android:id="@+id/trending"
                    android:fontFamily="@font/overpass_bold"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Event"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/trending"
                    android:textSize="13sp"
                    android:fontFamily="@font/overpass_bold"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="Register!"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="#80f5a623"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:fontFamily="@font/overpass_bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </RelativeLayout>

        </RelativeLayout>

</android.support.v7.widget.CardView>