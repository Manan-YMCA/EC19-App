<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="50dp"
    android:layout_marginBottom="20dp"
    android:background="@color/colorAccent"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/xunbao"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="#72000000"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/designation"
            android:fontFamily="@font/overpass_black"
            android:text="SHUBHAM SHARMA"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#72000000"
            android:textAlignment="center"
            android:layout_above="@+id/ll_prof"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/overpass_black"
            android:text="Lead Developer"
            android:textColor="#fff"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_prof"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#72000000"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:id="@+id/github"
                android:layout_weight="1"
                android:tint="#ffffff"
                android:src="@drawable/github_logo"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:id="@+id/linkedin"
                android:tint="#ffffff"
                android:src="@drawable/linkedn"
                />
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>